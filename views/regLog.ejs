<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./component/head",{data:{title:"index page"}}); %>
</head>
<body>
    <div class="container">
        <div class="row" id="first-div">
            <div class="offset-sm-3 col-sm-6">
                <form action="/register" method="post">
                    <!-- <input type="text" name="userName" placeholder="Enter your name" required><br><br> -->
                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <input type="text" name="userName" placeholder="Enter your name" class="form-control" />
                        </div>
                      </div>

                    <!-- <input type="email" name="Email" placeholder="Enter your email" required><br><br> -->
                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <input type="email" name="Email" placeholder="Enter your Email" class="form-control" />
                        </div>
                      </div>
                    <!-- <input type="text" name="Phone" placeholder="Enter your number" required><br><br> -->
                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <input type="number" name="Phone" placeholder="Your Phone" class="form-control" />
                        </div>
                      </div>
                    <!-- <input type="password" name="Password" placeholder="Enter your password" required><br><br> -->
                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <input type="password" name="Password" placeholder="Enter your Password" class="form-control" />
                        </div>
                      </div>
                    <button class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
        <div class="row" id="second-div">
            <div class="offset-sm-3 col-sm-6">
                <form action="/login" method="post">
                    <!-- <input type="email" name="Email" placeholder="Enter your email" required><br><br> -->
                    
                    <div class="form-outline mb-4">
                        <input type="email" name="Email" placeholder="Enter your Email" class="form-control" />
                      </div>
                    <!-- <input type="text" name="Password" placeholder="Enter your Password" required><br><br> -->
                    <div class="form-outline mb-4">
                        <input type="password" name="Password" placeholder="Password" class="form-control" />
                      </div>
                    <button class="btn btn-primary">Sign In</button>
                </form>
            </div>
        </div>
        <div class="row">
            
            <div class="col-12 text-center pt-5">
                    <a href="/forget">Forget Password</a>
                    <button class="btn btn-primary" id="register">
                    Register
                </button>
                <button class="btn btn-primary" id="login">
                    Login
                </button>
            </div>
        </div>
    </div>
    <%- include ("./component/footer") %>
    <script src="/js/main.js"></script>
</body>
</html>
